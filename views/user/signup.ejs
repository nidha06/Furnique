<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsive Sign Up Page</title>
  <link rel="stylesheet" href="styles.css">
  <!-- Include SweetAlert CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.0/dist/sweetalert2.min.css">
</head>
<body>
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #fdf3d2;
    }

    .container {
      display: flex;
      max-width: 1000px;
      width: 90%;
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      height: 82%;
    }

    .signup-form {
      flex: 1;
      padding: 25px;
    }

    .signup-form h2 {
      margin-bottom: 0px;
      font-size: 24px;
      color: #333;
    }

    .form-group {
      margin-bottom: 20px;
     
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
      color: #555;
    }

    .form-group input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .form-footer {
      margin-bottom: 20px;
    }

    .form-footer a {
      text-decoration: none;
      color: #570B4F;
      font-size: 14px;
    }

    .btn {
      width: 100%;
      padding: 7px;
      background-color: #570B4F;
      border: none;
      color: #fff;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #d812be;
    }

    .login-link {
      margin-top: -20px;
      text-align: right;
      font-size: 13px;
    }

    .login-link a {
      text-decoration: none;
      color: #570B4F;
    }

    .signup-image {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #f0f0f0;
    }

    .signup-image img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

    .password-toggle {
      margin-top: 5px;
      font-size: 14px;
      cursor: pointer;
      color: #570B4F;
    }

    .password-warning, .email-warning, .password-match-warning, .name-warning {
      color: red;
      font-size: 12px;
      margin-top: 5px;
      display: none;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }

      .signup-image {
        display: none;
      }
    }
  </style>

  <div class="container">
    <div class="signup-form">
      <h2 style="color: #570B4F;">Sign Up</h2>
      <div class="login-link">
        Already have an account? <a href="http://localhost:3001/login">Login</a>
      </div>
      <form method="post" action="/signup">
        <div style=" padding-top: 10px;" class="form-group">
          <label for="name">Full Name</label>
          <input type="text" name="name" id="name" placeholder="Enter your full name" required>
          <div id="name-warning" class="name-warning">Name should not have leading or trailing spaces!</div>
        </div>
        <div class="form-group">
          <label for="email-phone">Email</label>
          <input type="email" name="email" id="email-phone" placeholder="Enter your email" required>
          <div id="email-warning" class="email-warning">Email must end with @gmail.com</div>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" placeholder="Enter your password" required>
          <span id="password-toggle" class="password-toggle">Show Password</span>
          <div id="password-warning" class="password-warning">Password must be at least 8 characters long.</div>
        </div>
        <div class="form-group">
          <label for="confirm-password">Confirm Password</label>
          <input type="password" name="cpassword" id="confirm-password" placeholder="Confirm your password" required>
          <div id="password-match-warning" class="password-match-warning">Passwords do not match!</div>
        </div>
        <div class="form-footer">
          <a href="#">Forgot Password?</a>
        </div>
        <button type="submit" class="btn">Sign Up</button>
      </form>
      <div style="text-align: center; margin: 20px 0; padding-right: 20px;">
        <a href="/auth/google" style="display: flex; align-items: center; justify-content: center; padding: 4px 15px; border: 1px solid #ddd; border-radius: 30px; background-color: white; cursor: pointer;">
          <img 
            src="https://www.gstatic.com/images/branding/product/1x/gsa_64dp.png" 
            alt="Google Logo" 
            style="width: 20px; height: 20px; margin-right: 10px;">
          <span style="font-size: 15px; color: #1b1b1b;">Sign Up with Google</span>
        </a>
      </div>
      
      
    </div>
    <div class="signup-image">
      <img src="/images/login.jpg" alt="Sign Up Illustration">
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.0/dist/sweetalert2.all.min.js"></script> <!-- SweetAlert Script -->

  <script>
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirm-password');
    const emailInput = document.getElementById('email-phone');
    const nameInput = document.getElementById('name');
    const passwordWarning = document.getElementById('password-warning');
    const passwordMatchWarning = document.getElementById('password-match-warning');
    const emailWarning = document.getElementById('email-warning');
    const nameWarning = document.getElementById('name-warning');
    const form = document.querySelector('form');

    // Password toggle functionality
    const passwordToggle = document.getElementById('password-toggle');
    passwordToggle.addEventListener('click', () => {
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        passwordToggle.textContent = 'Hide Password';
      } else {
        passwordInput.type = 'password';
        passwordToggle.textContent = 'Show Password';
      }
    });

    // Password input validation for live feedback
    passwordInput.addEventListener('input', () => {
      if (passwordInput.value.length < 8) {
        passwordWarning.style.display = 'block';
      } else {
        passwordWarning.style.display = 'none';
      }
    });

    // Confirm Password validation
    confirmPasswordInput.addEventListener('input', () => {
      if (confirmPasswordInput.value !== passwordInput.value) {
        passwordMatchWarning.style.display = 'block';
      } else {
        passwordMatchWarning.style.display = 'none';
      }
    });

    // Email validation for Gmail format
    emailInput.addEventListener('input', () => {
      const email = emailInput.value;
      if (!email.endsWith('@gmail.com')) {
        emailWarning.style.display = 'block';
      } else {
        emailWarning.style.display = 'none';
      }
    });

    // Form submission validation
    form.addEventListener('submit', (event) => {
      let valid = true;

      // Check for leading spaces in the name field
      if (nameInput.value.trim().length !== nameInput.value.length) {
        event.preventDefault();
        valid = false;
        nameWarning.style.display = 'block';
      }

      // Check password length
      if (passwordInput.value.length < 8) {
        event.preventDefault();
        passwordWarning.style.display = 'block';
        valid = false;
      }

      // Check if passwords match
      if (passwordInput.value !== confirmPasswordInput.value) {
        event.preventDefault();
        passwordMatchWarning.style.display = 'block';
        valid = false;
      }

      // Check if email ends with @gmail.com
      if (!emailInput.value.endsWith('@gmail.com')) {
        event.preventDefault();
        emailWarning.style.display = 'block';
        valid = false;
      }

      // If the form is valid, proceed with submission
      if (valid) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: 'Form submitted successfully!',
        });
      }
    });
  </script>
</body>
</html>
