<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Manage Orders</title>
  <!-- In the head or before the closing body tag -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Global Styles */
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    /* Order Container Styling */
    .order-container {
      max-width: 1200px;
      margin: 30px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Table Styling */
    .table {
      width: 100%;
      border-collapse: collapse;
    }

    .table th{
        background-color: #570B4F;
    }

    .table th,
    .table td {
      text-align: center;
      vertical-align: middle;
      padding: 12px;
      border: 1px solid #ddd;
    }

    /* Status Badge Styling */
    .status-badge {
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 14px;
      font-weight: bold;
    }

    .status-pending {
      background-color: #ffc107;
      color: #570B4F;
    }

    .status-completed {
      background-color: #28a745;
      color: #fff;
    }

    .status-cancelled {
      background-color: #dc3545;
      color: #fff;
    }

    /* Responsive Table Container */
    .table-responsive {
      overflow-x: auto;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .order-container {
        padding: 15px;
      }
      .table th,
      .table td {
        padding: 10px;
        font-size: 14px;
      }
    }

    @media (max-width: 576px) {
      .order-container {
        margin: 15px;
        padding: 10px;
      }
      h2 {
        font-size: 24px;
      }
    }
  </style>
</head>
<body>
  <%- include('../../views/partials/admin/sidebar') %>
  <div class="container order-container">
    <h2 class="text-center mb-4">Manage Orders</h2>
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Shipping Address</th>
            <th>Payment Method</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
           
          </tr>
        </thead>
        <tbody id="orderTableBody">
          <% if (orders && orders.length > 0) { %>
            <% orders.forEach(order => { %>
              <tr>
                <td><%= order._id %></td>
                <td><%= order.user.name %> (<%= order.user.email %>)</td>
                <td><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %>, <%= order.shippingAddress.pincode %></td>
                <td><%= order.paymentMethod %></td>
                <td>&#8377;<%= order.totalPrice.toFixed(2) %></td>
                <td><%= order.status %></td>
                <td>
                  <button style="background-color: #570B4F; color: #fff;" onclick="viewOrder('<%= order._id %>')">View</button>
                 
                </td>
               
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center">No orders found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function getStatusClass(status) {
      const normalizedStatus = (status || '').toLowerCase();
      switch (normalizedStatus) {
        case 'pending':
          return 'status-pending';
        case 'completed':
          return 'status-completed';
        case 'cancelled':
          return 'status-cancelled';
        default:
          return '';
      }
    }

    function viewOrder(orderId) {
      window.location.href = `/admin/order-details/${orderId}`;
    }

    
  function cancelOrder(orderId) {
    // Show the SweetAlert confirmation dialog
    Swal.fire({
      title: 'Are you sure?',
      text: "Do you really want to cancel this order?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, cancel it!'
    }).then((result) => {
      if (result.isConfirmed) {
        // If confirmed, send the PUT request to cancel the order
        fetch(`/admin/orders/${orderId}/cancel`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Show success message
            Swal.fire({
              title: 'Cancelled!',
              text: 'Order has been cancelled.',
              icon: 'success'
            }).then(() => {
              // Optionally, update the UI or reload the page
              location.reload();
            });
          } else {
            // If the cancellation was not successful, show an error alert
            Swal.fire('Error', 'Failed to cancel the order.', 'error');
          }
        })
        .catch(error => {
          console.error('Error cancelling order:', error);
          Swal.fire('Error', 'An error occurred while cancelling the order.', 'error');
        });
      }
    });
  }


  </script>
</body>
</html>
